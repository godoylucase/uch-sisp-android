<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="principalEmail"
        android:title="@string/pref_title_user_email"
        android:selectAllOnFocus="true"
        android:inputType="textEmailAddress"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="defaultLocator"
        android:title="@string/pref_title_default_locator_provider"
        android:defaultValue="1"
        android:entries="@array/pref_list_locator_providers"
        android:entryValues="@array/pref_list_locator_providers_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
