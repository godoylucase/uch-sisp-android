<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blue_grey_700"
    android:orientation="vertical" tools:context=".SispMainActivity"
    android:id="@+id/mainLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_view_latitud"
        android:id="@+id/text_view_latitud"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_view_longitud"
        android:id="@+id/text_view_longitud"
        android:layout_row="2"
        android:layout_column="0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/button_panic_text"
        android:id="@+id/button_panic"
        android:layout_gravity="fill_horizontal|center"
        android:clickable="false"
        android:textStyle="bold"
        android:layout_row="80"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="@string/button_take_care_of_me_text"
        android:id="@+id/button_take_care_of_me"
        android:layout_gravity="fill_horizontal|center"
        android:clickable="false"
        android:textStyle="bold"
        android:layout_row="55"
        android:layout_column="0" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="484dp"
        android:layout_row="81"
        android:layout_column="0" />

</GridLayout>